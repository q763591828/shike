<import src="../../template/template.wxml"/>
<template is="tabBar" data="{{tabBar:bindData.tabBar}}"/>

<view wx:for="{{data}}">
<view class='content'>
  <view class='content_item'>
    <view class ='content_orderId_orderDate'>
      <view class = 'content_orderId'>
        订单号:
      </view>
      <view class= 'content_orderId_info'>
        {{item.order_id}}
      </view>
      <view class='content_orderDate'>
        预定时间:
      </view>
      <view class= 'content_orderId_date'>
         {{item.time}}
      </view>
    </view>
    <view class='content_info'>
        <view class='content_info_box'>
          菜品:{{item.caiName}}
        </view>
        <view class='content_info_box'>
          价格:{{item.caiPrice}}
        </view>
        <view class='content_info_box'>
          订单状态:待审查
        </view>
        <view class='content_info_box'>
          <view class='content_info_num'>
              总人数:{{item.sumNumber}}
          </view>
          <view class='content_info_num'>
              当前人数:{{item.nowNumber}}
          </view>
        </view>
    </view>
    <view class= 'content_add'>
      <button class='pass' data-order_id='{{item.order_id}}'  data-now_number='{{item.nowNumber}}'  data-sum_number='{{item.sumNumber}}' bindtap="pass">通过</button>
      <button class='pass' data-order_id='{{item.order_id}}'  data-now_number='{{item.nowNumber}}'  data-sum_number='{{item.sumNumber}}' bindtap="detail_order">查看</button>
    </view>
  </view>
</view>
</view>
